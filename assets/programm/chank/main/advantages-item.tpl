<div class="block parallax-parent">
    <div class="back">
        <div class="mouse-parallax">
            <img src="[[+image]]" alt="[[+alt]]" title="[[+img_title]]">
        </div>
    </div>
    <div class="front">
        <div class="image" data-icon="[[+icon]]">
            <i class="main2-icon main2-icon[[+idx]]"></i>
            <i class="main2-icon main2-icon[[+idx]]w"></i>
        </div>
        <h4>[[+title]]</h4>
        <p>[[+desc]]</p>
    </div>
</div>